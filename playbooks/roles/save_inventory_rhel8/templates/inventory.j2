{% for grp in groups %}
[{{ grp }}]
{% for host in groups[grp] %}
{% if host == '127.0.0.1' or host == 'localhost' %}
{{ host }} ansible_connection=local ansible_python_interpreter="/usr/bin/env python"
{% else %}
{{ hostvars[host]['ansible_host'] }} ansible_user={{ hostvars[host]['ansible_user'] }} ansible_host={{ hostvars[host]['ansible_host'] }} ansible_python_interpreter="{{ hostvars['localhost']['remote_ansible_python_interpreter'] }}"
{% endif %}
{% endfor %}

{% endfor %}
