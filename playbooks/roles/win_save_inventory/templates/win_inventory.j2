{% for grp in groups %}
[{{ grp }}]
{% for host in groups[grp] %}
{% if grp == 'all' %}
{% if host == '127.0.0.1' %}
{{ host }} ansible_connection=local ansible_python_interpreter=${VIRTUAL_ENV-/usr}/bin/python
{% else %}
{{ host }} ansible_connection=winrm ansible_ssh_host={{ hostvars[host]['ansible_ssh_host'] }} ansible_ssh_port={{ hostvars[host]['ansible_ssh_port'] }} ansible_ssh_user={{ hostvars[host]['ansible_ssh_user'] }} ansible_ssh_pass={{ hostvars[host]['ansible_ssh_pass']|quote }}
{% endif %}
{% else %}
{{ host }}
{% endif %}
{% endfor %}

{% endfor %}
