[ansible-nightly]
name=Nightly Ansible Repository - $releasever $basearch
{% if ansible_distribution in ['RedHat','CentOS'] and ansible_distribution_version.startswith('7') %}
baseurl={{ ansible_nightly_repo }}/rpm/epel-7-$basearch
{% elif ansible_distribution in ['RedHat','CentOS'] and ansible_distribution_version.startswith('6') %}
baseurl={{ ansible_nightly_repo }}/rpm/epel-6-$basearch
{% elif ansible_distribution == 'Fedora' %}
baseurl={{ ansible_nightly_repo }}/rpm/fedora-$releasever-$basearch
{% endif %}
gpgcheck=0
enabled=0
metadata_expire=7d
